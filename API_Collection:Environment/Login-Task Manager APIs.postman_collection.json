	"item": [
		{
			"name": "Register User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", () => {",
							"  pm.response.to.have.status(201);",
							"});",
							"pm.test(\"Success message\", () => {",
							"  pm.expect(pm.response.json().message).to.eql(\"User registered successfully\");",
							"});",
							"",
							"// Store username as variable for reuse",
							"const usernameMatch = pm.request.body.raw.match(/\"username\":\"(\\w+)\"/);",
							"if (usernameMatch) {",
							"  pm.collectionVariables.set(\"test_username\", usernameMatch[1]);",
							"}",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const username = `user_${Date.now()}`;",
							"pm.variables.set(\"test_username\", username);",
							"pm.variables.set(\"test_password\", \"testpass123\");"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"username\": \"{{test_username}}\",\n  \"password\": \"testpass123\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/register",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"register"
					]
				}
			},
			"response": []
		},
		{
